void GPGPU_gaussian_y_fp(
	float4 uv			   : TEXCOORD0,
	uniform sampler2D tex0 : register(s0),
	uniform float octave,
	out float4 result	   : COLOR
)
{
	const float steps[5] = {
		0.00208333333333,	//480
		0.00416666666667,	//240
		0.00833333333333,	//120
		0.0166666666667,	//60
		0.0333333333333,	//30
	};

	const float stepY = steps[octave];
	const float4 kernel[19] = {
		float4(0.000000000000000,	0.000000000000000,	0.000000000000000,	0.000000315772240),
		float4(0.000000000000000,	0.000000000000000,	0.000000000000000,	0.000005368772236),
		float4(0.000000000000000,	0.000000000000000,	0.000000447244020,	0.000065405030909),
		float4(0.000000000000000,	0.000000000000000,	0.000015647594410,	0.000570929609239),
		float4(0.000000000000000,	0.000001486719498,	0.000316830526572,	0.003570993663743),
		float4(0.000000000000000,	0.000133830224513,	0.003712641075253,	0.016004083678126),
		float4(0.000011854829609,	0.004431848414242,	0.025177659466863,	0.051393445581198),
		float4(0.004955579061061,	0.053990967571735,	0.098815307021141,	0.118255071341991),
		float4(0.185273721814156,	0.241970732808113,	0.224444776773453,	0.194969654083252),
		float4(0.619517624378204,	0.398942291736603,	0.295033454895020,	0.230329424142838),
		float4(0.185273721814156,	0.241970732808113,	0.224444776773453,	0.194969654083252),
		float4(0.004955579061061,	0.053990967571735,	0.098815307021141,	0.118255071341991),
		float4(0.000011854829609,	0.004431848414242,	0.025177659466863,	0.051393445581198),
		float4(0.000000000000000,	0.000133830224513,	0.003712641075253,	0.016004083678126),
		float4(0.000000000000000,	0.000001486719498,	0.000316830526572,	0.003570993663743),
		float4(0.000000000000000,	0.000000000000000,	0.000015647594410,	0.000570929609239),
		float4(0.000000000000000,	0.000000000000000,	0.000000447244020,	0.000065405030909),
		float4(0.000000000000000,	0.000000000000000,	0.000000000000000,	0.000005368772236),
		float4(0.000000000000000,	0.000000000000000,	0.000000000000000,	0.000000315772240)
	};
	float4 values = float4(0, 0, 0, 0);
    for (int i=0; i<19; i++) {
	   float4 coord = float4(uv.x, uv.y+(i-9)*stepY, 0, octave);
	   float luminance = tex2D(tex0, coord).r;
	   values += kernel[i]*luminance;
    }
	result = values;
}
