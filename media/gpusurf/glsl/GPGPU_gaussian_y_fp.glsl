);	
	
void main()
{
	float stepY = steps[int(octave)];
	
	vec4 values = vec4(0, 0, 0, 0);
    for (int i=0; i<19; i++) {
	   vec2 coord = vec2(gl_TexCoord[0].x, gl_TexCoord[0].y+(float(i)-9.0)*stepY);
	   float luminance = textureLod(tex0, coord, octave).r;
	   values += kernel[i]*luminance;
    }
	result = values;
}
