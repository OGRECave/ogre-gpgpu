#version 150

uniform sampler2D tex0;
in vec2 gl_TexCoord[1];
out vec4 result;
uniform float octave;

uniform float steps[5] = float[](
	0.00208333333333,	//480
	0.00416666666667,	//240
	0.00833333333333,	//120
	0.0166666666667,	//60
	0.0333333333333	//30
